<?xml version="1.0" encoding="utf-8"?>
<com.squadro.touricity.view.routeList.RouteExploreView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_explore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBCB6A"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/barImg"
        android:layout_below="@+id/createRouteHeading"
        android:layout_gravity="center|top"
        android:src="@drawable/ic_remove_24px" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/createRouteHeading"
        android:layout_above="@+id/barImg"
        android:gravity="center|bottom"
        android:text="Explore"
        android:textSize="24sp"
        android:textStyle="bold">
    </TextView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/route_explore_scroll">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route_explore_list">
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</com.squadro.touricity.view.routeList.RouteExploreView>