<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="bottom">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/path_edit_save"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_save_24px">
                    </Button>
                    <Button
                        android:id="@+id/path_edit_cancel"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/path_edit_save"
                        android:background="@drawable/ic_cancel_24px">
                    </Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edit_text_background"
                        android:gravity="top|left"
                        android:id="@+id/path_edit_comment_text"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="Comment...">
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_background"
                        android:gravity="top|left"
                        android:id="@+id/path_edit_duration_text"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="Duration...">
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_background"
                        android:gravity="top|left"
                        android:id="@+id/path_edit_expense_text"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="Expense...">
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/transportationCheckboxes"
                    android:background="@drawable/edit_text_background">

                    <TextView
                        android:id="@+id/transportationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/durationTextView"
                        android:layout_marginBottom="20dp"
                        android:text="Transportation"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/path_edit_walk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="walk"
                        android:layout_below="@+id/transportationTextView"
                        android:layout_marginBottom="15dp"/>

                    <CheckBox
                        android:id="@+id/path_edit_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="car"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@+id/transportationTextView"
                        android:layout_toRightOf="@+id/path_edit_walk"
                        android:layout_marginLeft="15dp"/>

                    <CheckBox
                        android:id="@+id/path_edit_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/path_edit_car"
                        android:layout_marginLeft="15dp"
                        android:text="bus"
                        android:layout_below="@+id/transportationTextView"
                        android:layout_marginBottom="15dp"/>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>
