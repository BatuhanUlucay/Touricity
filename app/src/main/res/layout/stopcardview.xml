<com.squadro.touricity.view.routeList.entry.StopCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#D6E6D6"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stop_view_button_layer">
            <Button
                android:id="@+id/stop_view_remove_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="x"/>

            <Button
                android:id="@+id/stop_view_move_up_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stop_view_remove_button"
                android:text="\u02C4" />
            <Button
                android:id="@+id/stop_view_move_down_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stop_view_move_up_button"
                android:text="\u02C5" />
            <Button
                android:id="@+id/stop_view_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stop_view_move_down_button"
                android:text="edit" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/card_view_stop_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop id: "/>

            <TextView
                android:id="@+id/card_view_stop_id_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view_stop_id_label"
                android:text="aşlkdfjaşdjfşalsdjf" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/card_view_location_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locaion id: "/>

            <TextView
                android:id="@+id/card_view_location_id_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view_location_id_label"
                android:text="aşlkdfjaşdjfşalsdjf" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/card_view_comment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment: "/>

            <TextView
                android:id="@+id/card_view_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view_comment_label"
                android:text="aşlkdfjaşdjfşalsdjf" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/card_view_duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: "/>

            <TextView
                android:id="@+id/card_view_duration_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view_duration_label"
                android:text="aşlkdfjaşdjfşalsdjf" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/card_view_expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense: "/>

            <TextView
                android:id="@+id/card_view_expense_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view_expense_label"
                android:text="aşlkdfjaşdjfşalsdjf" />
        </RelativeLayout>
    </LinearLayout>

</com.squadro.touricity.view.routeList.entry.StopCardView>