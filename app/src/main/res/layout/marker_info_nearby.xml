<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marker_info_nearby"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#EBA8BA"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="320dp">

        <ImageView
            android:id="@+id/add_nearby"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_touch_app_24px"/>
        <ImageView
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:layout_below="@id/add_nearby"
            android:id="@+id/info_img_nearby"/>
        <LinearLayout
            android:id="@+id/textAreasNearby"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_below="@id/info_img_nearby"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="5dp">
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
